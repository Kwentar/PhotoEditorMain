<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_screen"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.ed9m.photoeditor.FullscreenActivity" >


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingBottom="72dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibt_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@null"
            android:src="@drawable/ic_gallery"
            android:contentDescription="@string/gallery_desc" />

        <ImageButton
            android:id="@+id/ibt_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@null"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/camera_desc"
            />

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_id"/>
</LinearLayout>